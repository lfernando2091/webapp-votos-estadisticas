<ui:composition xmlns="http://www.w3.org/1999/xhtml"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:p="http://primefaces.org/ui"
                template="/WEB-INF/views/templates/spark/template.xhtml">

    <ui:define name="content">
        <div class="layout-portlets-box">
            <div class="Container100">
            	<h:form>
            		<p:breadCrumb>
						<p:menuitem value="root" url="/app/" />
						<p:menuitem value="Estructuras" />
						<p:menuitem value="Programas de Promoción" url="/app/estructuras/programasPromocion" />
					</p:breadCrumb>
					
					<p:panel header="Programas de Promoción">
						<p:dataTable value="${modeloProgramas.listado}" var="fila" rowKey="${fila.id}" selection="${modeloProgramas.seleccionado}" selectionMode="single">
							<p:column headerText="Nombre">${fila.nombre}</p:column>
						</p:dataTable>
						<f:facet name="footer">
							<p:commandLink action="agregar">
									<p:graphicImage value="/resources/botones/AGREGAR.png" />
							</p:commandLink>
							<p:commandLink action="editar" disabled="${modeloProgramas.seleccionado == null}" >
									<p:graphicImage value="/resources/botones/EDITAR.png" />
							</p:commandLink>
<!-- 							<p:commandButton value="Agregar" action="agregar" /> -->
<!-- 							<p:commandButton value="Editar" action="editar" disabled="${modeloProgramas.seleccionado == null}" /> -->
						</f:facet>
					</p:panel>
            		<input type="hidden" name="${_csrf.parameterName}" value="${_csrf.token}" />
            	</h:form>
            </div>
        </div>
        
    </ui:define>

</ui:composition>