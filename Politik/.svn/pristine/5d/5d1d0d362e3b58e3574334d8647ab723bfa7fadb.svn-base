<ui:composition xmlns="http://www.w3.org/1999/xhtml"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:p="http://primefaces.org/ui"
                template="/WEB-INF/views/templates/spark/template.xhtml">

    <ui:define name="content">
        <div class="layout-portlets-box">
            <div class="Container100">
            	<h:form>
            		<p:breadCrumb>
						<p:menuitem value="root" url="/app/" />
						<p:menuitem value="Estructuras" />
						<p:menuitem value="Legislaturas" url="/app/estructuras/legislaturas" />
					</p:breadCrumb>
					
					<p:panel header="Listado de Legislaturas">
						<p:dataTable value="${modeloLegislaturas.listado}" var="fila">
							<p:column headerText="Nivel" width="150">${fila.nivel.nombre}</p:column>
							<p:column headerText="Entidad" width="200">${fila.territorio.nombre}</p:column>
							<p:column headerText="Nombre">${fila.nombre}</p:column>
						</p:dataTable>
						<f:facet name="footer">
							<p:commandButton value="Agregar" action="agregar" />
						</f:facet>
					</p:panel>
					
					<input type="hidden" name="${_csrf.parameterName}" value="${_csrf.token}" />
            	</h:form>
            </div>
        </div>
        
    </ui:define>

</ui:composition>