<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:p="http://primefaces.org/ui"
	template="/WEB-INF/views/templates/spark/template.xhtml">

	<ui:define name="content">
		<div class="layout-portlets-box">
			<div class="Container100">
				<h:form>
					<p:messages autoUpdate="true" />
					<p:panel header="Datos de Contacto">
						<p:panelGrid columns="2" styleClass="panelNoBorder panelNoBorder">
							<p:outputLabel value="Id:" styleClass="negritas" />
							<p:outputLabel value="${contacto.get('id_interno')}" />
							<p:outputLabel value="Nombre: " styleClass="negritas" rendered="#{parametros.programa eq 'LICONSA'?'true':'false'}"/>
							<p:inputText value="${encuesta.nombreManual}"  rendered="#{parametros.programa eq 'LICONSA'?'true':'false'}"/>
							<p:outputLabel value="Primer Apellido " styleClass="negritas"   rendered="#{parametros.programa eq 'LICONSA'?'true':'false'}"/>
							<p:inputText value="${encuesta.primerManual}"  rendered="#{parametros.programa eq 'LICONSA'?'true':'false'}"/>
							<p:outputLabel value="Segundo Apellido " styleClass="negritas"  rendered="#{parametros.programa eq 'LICONSA'?'true':'false'}" />
							<p:inputText value="${encuesta.segundoManual}"  rendered="#{parametros.programa eq 'LICONSA'?'true':'false'}"/>
							<p:outputLabel value="Dirección Captura Manual: " styleClass="negritas"  rendered="#{parametros.programa eq 'LICONSA'?'true':'false'}" />
							<p:inputTextarea value="${encuesta.direccionManual}"  rendered="#{parametros.programa eq 'LICONSA'?'true':'false'}"/>
							<p:outputLabel value="Dirección: " styleClass="negritas" />
							<p:outputLabel
								value="${contacto.get('calle')} ${contacto.get('num_exterior')} ${contacto.get('num_ixterior')} ${contacto.get('colonia')} ${contacto.get('nombre_municipio')}" />
                           
						</p:panelGrid>
					</p:panel>
					<p:separator />
					<p:panel header="Encuesta">
						<p:panelGrid columns="1" styleClass="panelNoBorder">
							<p:outputLabel
								value="1.- ¿El apoyo que recibe le hace sentir que su Gobierno le está cumpliendo?" />
							<p:selectOneRadio value="${encuesta.r1}"
								converter="ObjectConverter" style="width: 300px" required="true"
								requiredMessage="Pregunta 1: es requerida" styleClass="negritas">
								<f:selectItems value="${muchoRegularNada.listado}" var="s"
									itemLabel="${s}" itemValue="${s}" />
							</p:selectOneRadio>
							<p:outputLabel
								value="2.- ¿Los apoyos que le otorga el  Gobierno contribuyen a mejorar su ingreso familiar?" />
							<p:selectOneRadio value="${encuesta.r2}"
								converter="ObjectConverter" style="width: 300px" required="true"
								requiredMessage="Pregunta 2: es requerida" styleClass="negritas">
								<f:selectItems value="${muchoRegularNada.listado}" var="s"
									itemLabel="${s}" itemValue="${s}" />
							</p:selectOneRadio>
							<p:outputLabel
								value="3.- ¿Qué tan satisfecho está con los apoyos sociales que recibe?" />
							<p:selectOneRadio value="${encuesta.r3}"
								converter="ObjectConverter" style="width: 300px" required="true"
								requiredMessage="Pregunta 3: es requerida">
								<f:selectItems value="${muchoRegularNada.listado}" var="s"
									itemLabel="${s}" itemValue="${s}" />
							</p:selectOneRadio>
							<p:outputLabel
								value="4.- ¿Qué calificación le daría al Gobierno Federal?" />
							<p:selectOneRadio value="${encuesta.r4}"
								converter="ObjectConverter" style="width: 300px" required="true"
								requiredMessage="Pregunta 4: es requerida">
								<f:selectItems value="${buenaRegularNada.listado}" var="s"
									itemLabel="${s}" itemValue="${s}" />
							</p:selectOneRadio>
							<p:outputLabel
								value="5.- ¿Le gustaría que los Programas se mantengan coomo hasta ahora lo han hecho?" />
							<p:selectOneRadio value="${encuesta.r5}"
								converter="ObjectConverter" style="width: 300px" required="true"
								requiredMessage="Pregunta 5: es requerida">
								<f:selectItems value="${sino.listado}" var="s" itemLabel="${s}"
									itemValue="${s}" />
							</p:selectOneRadio>
							<p:outputLabel
								value="Encuestador" />
							<p:selectOneMenu value="${encuesta.encuestador}"
								converter="ObjectConverter" style="width: 300px" required="true" requiredMessage="Encuestador: requerido">
								<f:selectItems value="${modeloEncuestadores.listado}" var="s" itemLabel="${s.nombre} ${s.primerApellido} ${s.segundoApellido}"
									itemValue="${s}" />
							</p:selectOneMenu>
							<p:outputLabel	value="Email" />
								<p:inputText value="${encuesta.email}"/>
								<p:outputLabel value="Telefono" >
								</p:outputLabel>
								<p:inputText value="${encuesta.telefono}">
								<f:validateLength minimum="0" maximum="10" />
								</p:inputText>
								<p:outputLabel value="Adultos" />
								<p:inputText value="${encuesta.adultos}" requiredMessage="Adultos: es requerido" validatorMessage="Adultos: ingrese número válido">
								<f:validateRegex pattern="^[+]?[0-9]+$" />
								<f:validateLength minimum="0" maximum="2" />
								</p:inputText>
							<p:outputLabel
								value="Resultado" />
							<p:selectOneMenu value="${encuesta.resultado}"
								converter="ObjectConverter" style="width: 300px">
								<f:selectItems value="${modeloResultadoEncuesta.listado}" var="s" itemLabel="${s.nombre}"
									itemValue="${s}" />
							</p:selectOneMenu>
							
							
						</p:panelGrid>
						<f:facet name="footer">
							<p:commandButton value="Guardar" action="guardar"
								icon="fa fa-save"
								rendered="#{contacto.get('estatus') ne 'PENDIENTE'?'false':'true'}" />
							<p:commandButton value="Actualizar" action="actualizar"
								icon="fa fa-save"
								rendered="#{contacto.get('estatus') ne 'PENDIENTE'?'true':'false'}" />
							<p:commandButton value="Salir" action="salir" icon="fa fa-close"
								immediate="true" />
						</f:facet>
					</p:panel>
					<input type="hidden" name="${_csrf.parameterName}"
						value="${_csrf.token}" />
				</h:form>
			</div>
		</div>

		<h:outputStylesheet>
			.topAlign{
				vertical-align: top;
			} 
			.ui-selectoneradio.ui-widget td {
     border: 0 none !important;
}
.panelNoBorder, .panelNoBorder tr, .panelNoBorder td{
border: hidden;
border-color: white;
}
.negritas{
			font-weight: bold !important;
			}
		</h:outputStylesheet>

		<h:outputScript>
			window.onload = function() {
				gmap = PF('mapaWV').getMap();
			}
		</h:outputScript>

	</ui:define>

</ui:composition>